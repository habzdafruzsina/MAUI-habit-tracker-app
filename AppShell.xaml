<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="beadando.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:beadando"
    Shell.FlyoutBehavior="Disabled"
    Title="habitsApp">

    <TabBar>

        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate local:TodayPage}"  Shell.NavBarIsVisible="False" />
        </Tab>
        <Tab Title="My habits" >
            <ShellContent ContentTemplate="{DataTemplate local:HabitsListPage}"  Shell.NavBarIsVisible="False" />
        </Tab>
    
    </TabBar>
</Shell>
